{
    "compilerOptions": {
        "outDir": "dist",
        "noImplicitOverride": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "jsx": "react",
        "paths": {
            "@application/*": ["src/application/*"],
            "@kernel/*": ["src/kernel/*"],
            "@main/*": ["src/main/*"],
            "@shared/*": ["src/shared/*"],
            "@infra/*": ["src/infra/*"]
        }
    }
}
